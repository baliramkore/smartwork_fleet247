<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/cancel_booking_text"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="@color/green"
        android:fontFamily="@font/sintonyfamily"
        android:gravity="center"
        android:text="@string/cancellation_reason_text"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cancel_reason"
        android:layout_width="320dp"
        android:layout_height="175dp"
        android:fontFamily="@font/sintonyfamily"
        android:inputType="textMultiLine"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintStart_toStartOf="@+id/cancel_booking_text"
        app:layout_constraintTop_toBottomOf="@+id/cancel_booking_text"
        tools:text="I am Sick" />

    <Button
        android:id="@+id/confirm_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_booking_text"
        app:layout_constraintLeft_toLeftOf="@+id/cancel_reason"
        app:layout_constraintTop_toBottomOf="@+id/cancel_reason"
        app:layout_constraintRight_toRightOf="@+id/cancel_reason"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sintonyfamily"
        android:textStyle="bold"/>
    />
</androidx.constraintlayout.widget.ConstraintLayout>