<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/trip_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trip_details_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:fontFamily="@font/sintonyregular"
        android:textColor="@color/textBlack"
        />
    <TextView
        android:id="@+id/booking_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="@string/booking_id"
        android:paddingStart="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_details_text"
        />
    <TextView
        android:id="@+id/booking_id_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintBaseline_toBaselineOf="@+id/booking_id"/>

    <TextView
        android:id="@+id/pickup_location_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:text="@string/pickup_location"
        android:paddingStart="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_id"
        app:layout_constraintBaseline_toBaselineOf="@+id/pickup_location_value"
        />
    <TextView
        android:id="@+id/pickup_location_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_id" />
    <TextView
        android:id="@+id/package_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:text="@string/trip_type"
        android:paddingStart="20dp"
        android:fontFamily="@font/sintonyregular"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/package_type_value"
        />
    <TextView
        android:id="@+id/package_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickup_location_value" />

    <TextView
        android:id="@+id/vehicle_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:text="@string/vehicle_type"
        android:fontFamily="@font/sintonyregular"
        android:paddingStart="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_type_value"
        />
    <TextView
        android:id="@+id/vehicle_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/package_type_value" />

    <TextView
        android:id="@+id/payment_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:text="@string/payment_type"
        android:paddingStart="20dp"
        android:fontFamily="@font/sintonyregular"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/payment_type_value"
        />
    <TextView
        android:id="@+id/payment_type_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_type_value"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phone_bottomsheet_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_type_value"
        app:layout_constraintBottom_toTopOf="@+id/contact_support">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/contact_support"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:padding="3dp"
        android:text="@string/contact_us"
        android:autoLink="phone"
        android:fontFamily="@font/sintonyregular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>
